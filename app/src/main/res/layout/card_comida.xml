<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card_platillo"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    card_view:cardCornerRadius="8dp"
    android:elevation="10dp"
    android:layout_margin="10dp"
    android:layout_height="250dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:padding="10dp"
            android:id="@+id/img_com_row"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/comida"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_below="@+id/img_com_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/tv_platillo"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enchiladas Huastecas"/>

            <ImageView
                android:layout_weight="2"
                android:src="@drawable/ic_precio"
                android:layout_width="0dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/tv_precio"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text="45"/>

        </LinearLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>